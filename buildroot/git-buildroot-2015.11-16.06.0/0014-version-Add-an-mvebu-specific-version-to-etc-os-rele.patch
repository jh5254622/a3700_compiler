From 58c7679071813fa11f7ee30505133a85c97ed960 Mon Sep 17 00:00:00 2001
From: Shadi Ammouri <shadi@marvell.com>
Date: Thu, 9 Jul 2015 08:37:09 +0300
Subject: [PATCH 14/66] version: Add an mvebu specific version to
 /etc/os-release

Change-Id: I843069b5218f8da761126fc0f0f4d25a877eeede
Signed-off-by: Shadi Ammouri <shadi@marvell.com>
Reviewed-on: http://vgitil04.il.marvell.com:8080/21145
---
 Makefile         | 3 ++-
 system/Config.in | 6 ++++++
 2 files changed, 8 insertions(+), 1 deletion(-)

diff --git a/Makefile b/Makefile
index b345471..d4493a2 100644
--- a/Makefile
+++ b/Makefile
@@ -608,7 +608,8 @@ endif
 		echo "VERSION=$(BR2_VERSION_FULL)"; \
 		echo "ID=buildroot"; \
 		echo "VERSION_ID=$(BR2_VERSION)"; \
-		echo "PRETTY_NAME=\"Buildroot $(BR2_VERSION)\"" \
+		echo "PRETTY_NAME=\"Buildroot $(BR2_VERSION)\""; \
+		echo "MVEBU_RELEASE=\"$(BR2_MVEBU_RELEASE_NAME)\"" \
 	) >  $(TARGET_DIR)/etc/os-release
 
 	@$(foreach d, $(call qstrip,$(BR2_ROOTFS_OVERLAY)), \
diff --git a/system/Config.in b/system/Config.in
index 2e14971..79551cb 100644
--- a/system/Config.in
+++ b/system/Config.in
@@ -18,6 +18,12 @@ config BR2_TARGET_GENERIC_ISSUE
 	  Leave empty to not create /etc/issue, or to keep the
 	  one from a custom skeleton.
 
+config BR2_MVEBU_RELEASE_NAME
+	string "MVEBU Release Name"
+	default "MVEBU"
+	help
+	  Enter buildroot release name.
+
 choice
 	bool "Passwords encoding"
 	default BR2_TARGET_GENERIC_PASSWD_MD5
-- 
