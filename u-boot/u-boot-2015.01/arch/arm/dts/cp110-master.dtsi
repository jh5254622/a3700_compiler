/ {

	model = "Marvell Armada CPN-110 Master";

	cp110-master {
		compatible = "marvell,armada-cpn110-master", "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;

		internal-regs {
			compatible = "marvell,internal-regs", "simple-bus";
			ranges = <0x0000 0xf2000000 0x1000000>;
			#address-cells = <1>;
			#size-cells = <1>;

			#include "cp110.dtsi"

			pcie-controller {
				#address-cells = <1>;
				#size-cells = <1>;
				compatible = "marvell,mvebu-dw-pcie";

				pcie@0,0 {
					reg = <0x00600000 0x20000>;
					mem = <0xf6000000 0x1000000>;
					cfg = <0xf6f00000 0x100000>;
					status = "disabled";
				};
				pcie@1,0 {
					reg = <0x00620000 0x20000>;
					mem = <0xf7000000 0x1000000>;
					cfg = <0xf7f00000 0x100000>;
					status = "disabled";
				};
				pcie@2,0 {
					reg = <0x00640000 0x20000>;
					mem = <0xf8000000 0x1000000>;
					cfg = <0xf8f00000 0x100000>;
					status = "disabled";
				};
			};
		};
	};

	cp110-master {
		internal-regs {
			refclk: refclk {
			};
			sar-reg {
				status = "okay";
			};
			utmi0@580000 {
				status = "okay";
			};
			utmi1@581000 {
				status = "okay";
			};
			mdio0@12A200 {
				status = "okay";
			};
			gpio1: gpio@440100 {
			};
			gpio2: gpio@440140 {
			};

			gop {
				emac0: mac0 {
					mac-address = [00 00 00 00 00 01];
					port-id = <0>; /* gop_port_id */
				};
				emac2: mac2 {
					mac-address = [00 00 00 00 00 02];
					port-id = <2>; /* gop_port_id */
				};
				emac3: mac3 {
					mac-address = [00 00 00 00 00 03];
					port-id = <3>; /* gop_port_id */
				};
			};
			ppv22@000000 {
				eth0@010000 {
					emac-data = <&emac0>;
				};
				eth1@020000 {
					emac-data = <&emac2>;
				};
				eth2@030000 {
					emac-data = <&emac3>;
				};
			};
		};
	};
};
